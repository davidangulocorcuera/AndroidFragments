<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <fragment
            android:layout_width="190dp"
            android:layout_height="292dp" android:name="com.example.biolizard.fragmentstest.ButtonFragment"
            android:id="@+id/fragment_buttons"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />
    <fragment
            android:layout_width="380dp"
            android:layout_height="287dp" android:name="com.example.biolizard.fragmentstest.TextViewFragment"
            android:id="@+id/fragment_text"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/fragment_buttons"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>